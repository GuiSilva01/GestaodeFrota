@model IEnumerable<GestaodeFrota.Models.Apolice>
@{
    ViewData["Title"] = "Apolice";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Tipo)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Descricao)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Seguro)
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Tipo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Descricao)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Seguro)
            </td>
            <td>
                <a asp-action="DetailsApolice" asp-route-id="@item.Id">Detalhes</a>
                <a asp-action="DeleteApolice" asp-route-id="@item.Id">Deletar</a>
            </td>
        </tr>
        }
    </tbody>
</table>