@model GestaodeFrota.Models.ViewModels.ApoliceFormViewModel

@{
    ViewData["Title"] = "Apolice";
}

<h2>@ViewData["Title"]</h2>

<h4>Editar Apolice</h4>
<hr />

<div class="row">
    <div class="col-4">
        <form asp-action="EditApolice">
            <input type="hidden" asp-for="Apolice.Id" />
            <div class="form-group">
                <label asp-for="Apolice.Tipo" class="control-label"></label>
                <input asp-for="Apolice.Tipo" class="form-control" />
            </div>
            <div class="form-group">
                <label asp-for="Apolice.Descricao" class="control-label"></label>
                <input asp-for="Apolice.Descricao" class="col-auto" />
            </div>
            <div class="form-group">
                <label asp-for="Apolice.SeguroId" class="control-label"></label>
                <select asp-for="Apolice.SeguroId" asp-items="@(new SelectList(Model.Seguros,"Id","Nome"))" class="form-control"></select>
            </div>
            <div class="form-group">
                <input type="submit" value="Salvar" class="btn btn-danger" />
            </div>
        </form>
    </div>
</div>