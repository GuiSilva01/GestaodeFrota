@model IEnumerable<GestaodeFrota.Models.Seguro>
@{
    ViewData["Title"] = "Seguro";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Nome)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.ValorSeguro)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.Validade)
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Nome)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.ValorSeguro)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Validade)
            </td>
            <td>
                <a asp-action="DetailsSeguro" asp-route-id="@item.Id">Detalhes</a>
                <a asp-action="DeleteSeguro" asp-route-id="@item.Id">Deletar</a>
                <a asp-action="EditSeguro" asp-route-id="@item.Id">Editar</a>
            </td>
        </tr>
        }
    </tbody>
</table>