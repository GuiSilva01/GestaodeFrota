@model IEnumerable<GestaodeFrota.Models.Abastecimento>
@{
    ViewData["Title"] = "Abastecimento";
}

<h2>@ViewData["Title"]</h2>

<table class="table table-striped table-hover">
    <thead>
        <tr>
            <td>
                @Html.DisplayNameFor(model => model.Litros)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.ValorLitro)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.ValorAbaste)
            </td>
            <td>
                @Html.DisplayNameFor(model => model.DataAbaste)
            </td>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.Litros)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorLitro)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.ValorAbaste)
                </td>
                <td>
                    @Html.DisplayFor(modelItem => item.DataAbaste)
                </td>
                <td>
                    <a asp-action="DetailsAbastecimento" asp-route-id="@item.Id">Detalhes</a>
                    <a asp-action="DeleteAbastecimento" asp-route-id="@item.Id">Deletar</a>
                    <a asp-action="EditAbastecimento" asp-route-id="@item.Id">Editar</a>
                </td>
            </tr>
        }
    </tbody>
</table>